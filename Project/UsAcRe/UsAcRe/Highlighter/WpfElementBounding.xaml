<Window x:Class="UsAcRe.WpfElementBounding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:UsAcRe"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        WindowStyle="None"
        AllowsTransparency="True" Background="{x:Null}"
        Topmost="True"
        ShowInTaskbar="False"
        Name="ElementBoundingWindow"
        Opacity="0.6">
    <Border Name="outerBounding" BorderBrush="Cyan" BorderThickness="1">
        <Border Name="innerBounding" BorderBrush="Blue" BorderThickness="1">
        </Border>
    </Border>
</Window>
