<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
  </startup>


  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="fileOut" xsi:type="File" autoFlush="true" fileName="${var:logDirectory}/RSTester.log" concurrentWrites="false" archiveFileName="${var:logDirectory}/RSTester.Archive.{#}.log" archiveEvery="Day" archiveNumbering="Rolling" maxArchiveFiles="9" layout="${date:dd HH\:mm\:ss}|${message}"/>
      <target name="traceFileOut" xsi:type="File" autoFlush="true" fileName="${basedir}/RSTester.Trace.log" concurrentWrites="false" archiveFileName="${basedir}/RSTester.Trace.{#}.log" archiveEvery="Day" archiveNumbering="Rolling" archiveOldFileOnStartup="true" maxArchiveFiles="2" layout="${time}|${message}"/>

      <target xsi:type="RichTextBox" name="controlOut" layout="${time} |${level:format=FirstCharacter}| ${message}" controlName="txtLog" formName="MainForm" autoScroll="true" allowAccessoryFormCreation="false">

        <row-coloring condition="level == LogLevel.Debug" fontColor="DarkGray"/>
        <row-coloring condition="level == LogLevel.Warn" fontColor="Olive"/>
        <row-coloring condition="level == LogLevel.Info" fontColor="Navy"/>
        <row-coloring condition="level == LogLevel.Error" fontColor="DarkRed"/>
        <row-coloring condition="level == LogLevel.Fatal" fontColor="Red" style="Bold"/>

      </target>
    </targets>
    <rules>
      <logger name="UsAcRe.FormMain" minlevel="Info" writeTo="controlOut"/>
      <logger name="UsAcRe.FileOut" minlevel="Info" writeTo="fileOut, controlOut"/>
      <logger name="UsAcRe.Trace" minlevel="Trace" writeTo="traceFileOut"/>
    </rules>
  </nlog>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-4.0.6.0" newVersion="4.0.6.0"/>
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="Unity.Abstractions" publicKeyToken="489b6accfaf20ef0" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-5.11.4.0" newVersion="5.11.4.0"/>
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Threading.Tasks.Extensions" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-4.2.0.1" newVersion="4.2.0.1"/>
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="CommonServiceLocator" publicKeyToken="489b6accfaf20ef0" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-2.0.5.0" newVersion="2.0.5.0"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
